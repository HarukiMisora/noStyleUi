{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noUnusedLocals": true,       
    "noUnusedParameters": true,
    "strict": true,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "rootDir": "src",
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,

  },
  "include": ["src/**/*", "interface/**/*.d.ts" ,"packages/**/*"],
  "exclude": ["src/main.ts","src/noStyleUi/style/style.class.ts"]
}